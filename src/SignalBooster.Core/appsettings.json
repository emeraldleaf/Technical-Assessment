{
  "SignalBooster": {
    "Api": {
      "BaseUrl": "https://alert-api.com",
      "ExtractEndpoint": "/DrExtract",
      "TimeoutSeconds": 30,
      "RetryCount": 3,
      "RetryDelaySeconds": 2
    },
    "Files": {
      "DefaultInputPath": "../../assignment/physician_note1.txt",
      "OutputDirectory": "output",
      "CreateOutputDirectory": true,
      "SupportedExtensions": [".txt", ".json"]
    },
    "Logging": {
      "LogLevel": "Information",
      "LogOutputPath": "logs/signalbooster-.log",
      "EnableConsoleLogging": true,
      "EnableFileLogging": true,
      "EnableStructuredLogging": true,
      "RetainedFileCountLimit": 10
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/signalbooster-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "SignalBooster"
    }
  }
}